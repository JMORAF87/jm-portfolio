{
  "info": {
    "_postman_id": "[GENERATED_ID]",
    "name": "AI Chat Completions API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for the AI Chat Completions API."
  },
  "variables": [
    {
      "key": "AI_API_BASE",
      "value": "http://localhost:8000/v1",
      "type": "string"
    },
    {
      "key": "AI_API_KEY",
      "value": "YOUR_API_KEY_HERE",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Test AI Completion",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{AI_API_KEY}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"model\": \"gpt-3.5-turbo\",\n    \"messages\": [\n        {\n            \"role\": \"user\",\n            \"content\": \"Hello, how are you?\"\n        }\n    ],\n    \"temperature\": 0.7,\n    \"max_tokens\": 50\n}"
        },
        "url": {
          "raw": "{{AI_API_BASE}}/chat/completions",
          "host": [
            "{{AI_API_BASE}}"
          ],
          "path": [
            "chat",
            "completions"
          ]
        },
        "description": "Sends a request to the AI chat completions endpoint."
      },
      "response": []
    }
  ]
}
